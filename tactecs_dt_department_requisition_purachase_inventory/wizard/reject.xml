<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
   
                <record id="requisition_reject_wizard_form" model="ir.ui.view">
                    <field name="name">wizard.requisition_reject</field>
                    <field name="model">wizard.requisition_reject</field>
                    <field name="arch" type="xml">
                        <form >

                   
         <group >
         <group >
                                
          <field name="refuse_reason"  required="1"  />
                                                         
           </group>
               </group>
                                   
    
                                        <footer>
                                            <button string="Reject" class="btn-primary" type="object" name="action_confirm"/>
                                     
                                         <button string="Cancel" class="btn-primary" type="object" special="cancel" />

                        </footer>
                                        </form>
                    </field>
                </record>
                


     
                <record id="requisition_reject_wizard_action" model="ir.actions.act_window">
                    <field name="type">ir.actions.act_window</field>
                    <field name="name">Requisition reject</field>
                    <field name="res_model">wizard.requisition_reject</field>
                    <field name="view_mode">form</field>
                    <field name="target">new</field>
                </record>




             
    </data>
</odoo>